{
  "name": "crossroads",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others 'npm run watch' 'npx netlify-cms-proxy-server' 'npm run dev:netlify'",
    "dev:netlify": "npx netlify dev --command 'npm run dev:vite'",
    "dev:vite": "vite",
    "prebuild": "npm run scripts:install && npm run scripts:use",
    "build": "run-p type-check build-only",
    "build-only": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "scripts:install": "npm --prefix ./scripts install",
    "scripts:use": "npm --prefix ./scripts run use",
    "watch": "npm run watch:locales",
    "watch:locales": "npx watch 'npm --prefix ./scripts run execute:locales' ./content/cms/translation",
    "prepare": "husky install",
    "test": "npm run lint && npm run type-check"
  },
  "dependencies": {
    "@directus/sdk": "^10.3.3",
    "@nirazul/scss-mq": "^1.2.1",
    "@nirazul/scss-utils": "^1.2.0",
    "@vueuse/core": "^9.10.0",
    "arg": "^5.0.2",
    "lodash-es": "^4.17.21",
    "pinia": "^2.0.30",
    "screenfull": "^6.0.2",
    "string-args-parser": "^1.0.4",
    "superjson": "^1.12.2",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6",
    "yarn-bound": "^0.3.1"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^0.8.1",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jsdom": "^20.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "husky": "^8.0.3",
    "jsdom": "^20.0.3",
    "netlify-cli": "^12.5.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "prettier": "^2.7.1",
    "sass": "^1.57.1",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vite-svg-loader": "^4.0.0",
    "vitest": "^0.25.6",
    "vue-i18n": "^9.2.2",
    "vue-tsc": "^1.0.12"
  }
}
